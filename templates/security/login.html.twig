{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <section class="vh-80" style="background-color: #eee;">
        <div class="container h-80">
            <div class="row d-flex justify-content-center align-items-center h-80">
                <div class="col-lg-12 col-xl-11">
                    <div class="card text-black mt-5 mb-5" style="border-radius: 25px;">
                        <div class="card-body p-md-5">
                            <div class="row justify-content-center">
                                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                                    <form method="post">
                                    {% if error %}
                                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                    {% endif %}

                                    <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Log in</h3>

                                    <div class="form-outline mb-4">
                                        <input
                                                type="text"
                                                value="{{ last_username }}"
                                                name="username"
                                                id="in"
                                                class="bg-transparent block mt-10 mx-auto border-b-2 w-1/5 h-20 text-2xl outline-none"
                                                placeholder="Username"
                                                autocomplete="Username"
                                                required
                                                autofocus
                                        >
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input
                                                type="password"
                                                name="password"
                                                id="inputPassword"
                                                class="bg-transparent block mt-10 mx-auto border-b-2 w-1/5 h-20 text-2xl outline-none"
                                                autocomplete="current-password"
                                                placeholder="Password"
                                                required
                                        >
                                    </div>

                                    <input
                                            type="hidden"
                                            name="_csrf_token"
                                            value="{{ csrf_token('authenticate') }}"
                                    >

                                    <div class="pt-1 mb-4">
                                        <button class="btn btn-success btn-lg btn-block type='submit'">Login</button>
                                    </div>
                                    <p>Don't have an account? <a href="{{ path('app_register') }}" class="link-success">Register here</a></p>

                                    </form>
                                </div>
                                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                    <img src="/public/img/register_books.png"
                                         class="img-fluid" alt="Sample image">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}