{% extends 'base.html.twig' %}

{% block title %}{{book.title}} | {{ parent() }}{% endblock %}

{% block body %}
    <div class="container text-black mt-5 col-md-6">
        <div class="card" style="background-color: #eee;">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 mt-5">
                        <div class="white-box text-center"><img src={{ book.thumbnail}} class="img-thumbnail bg-success p-2"></div>
                    </div>
                    <div class="col-md-4">
                        <h4 class="box-title mt-5"><b>{{ book.title }}</b></h4>
                        <h5 class="mt-4">{{ book.subtitle }}</h5>
                        <ul class="mt-5">
                            <li>Release year: {{ book.year }}</li>
                            <li>Genre: {{ book.genre }}</li>
                            <li>ISBN: {{ book.isbn13 }}</li>
                        </ul>
                    </div>
                    <div class="col-md-4">
                        <div class='large-font text-center top-20 mt-5'>
                            <p>heart</p>
                            <ion-icon name="heart">
                                <div class='red-bg'></div>
                            </ion-icon>
                        </div>
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <h3 class="box-title mt-5">Summary</h3>
                        <p>{{ book.description }}</p>
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
